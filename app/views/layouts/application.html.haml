!!!
%html
  %head
    %title= page_title

    = auto_discovery_link_tag(:rss, '/rss.xml')

    = stylesheet_link_tag ["fonts", "base"]

    = javascript_include_tag :defaults

    = yield :js
    
    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/favicon.ico"}

    = csrf_meta_tag
    %meta{:name => "keywords", :content => META[:keywords] || ""}
    %meta{:name => "description", :content => META[:description] || ""}

  %body
    #bgwrapper
      #top= render :partial => "shared/top"
      #header
        %h1 Clifton Studios
      #main
        #borderwrapper
          #nav
            = render :partial => "shared/nav"
          #columns
            #sidebar
              = render :partial => "shared/members/nav" if current_member
              = render :partial => "shared/sidebar"
              = render :partial => "shared/members/sidebar" if current_member
            #content
              = render :partial => "shared/flashes"
              = yield
    #footer= render :partial => "shared/footer"
