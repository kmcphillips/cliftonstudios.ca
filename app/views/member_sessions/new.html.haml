%h1 Member Login

.post
  = form_for @member_session, :url => {:action => "create"} do |f|
    = error_messages @member_session
    %div
      = f.label :login
      = f.text_field :login
    %div
      = f.label :password
      = f.password_field :password
    %div
      = f.check_box :remember_me
      = f.label :remember_me
    %div
      = f.submit "Login"
