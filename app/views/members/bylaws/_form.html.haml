- url = @bylaw.persisted? ? members_bylaw_path(@bylaw) : members_bylaws_path

= form_for [:members, @bylaw], url: url, html: {multipart: true} do |f|
  = f.error_messages

  %ul.form
    = f.item :text_field, :name, size: 40
    = f.item :file_field, :file, label: "Document", note: "PDFs only"
    - if @bylaw.persisted?
      %li
        %label Current Document
        = show_entity_image @bylaw.file.url, "Preview", target: '_blank'
    = f.item :submit, "Save"
