.clear
  .float_left
    %h3= member.name
    %p= simple_format member.address
    %p
      - unless member.phone.blank?
        = member.phone
        %br
      - unless member.alternate_phone.blank?
        = member.alternate_phone
        %br
      = link_to member.email, "mailto:#{member.email}"
      - unless member.website.blank?
        %br
        = link_to member.website, member.website

  .float_right
    = show_entity_image members_member_path(member)
    = edit_entity_image edit_members_member_path(member)