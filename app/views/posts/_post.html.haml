%h1
  - if post.new_record?
    = post.title
  - else
    = link_to post.title, post_path(post)
    
.subtext_left= post.created_at.try(:to_s, :with_time_no_minutes)
.subtext_right
  By
  = member_link post.member

.post.clear_right
  = link_to image_tag(post.inline, :class => "inline", :alt => post.title), post.full, :rel => "lightbox", :class => "thumb inline" if post.image.exists?
  = auto_link(simple_format(post.body)).html_safe
  .clear_right
